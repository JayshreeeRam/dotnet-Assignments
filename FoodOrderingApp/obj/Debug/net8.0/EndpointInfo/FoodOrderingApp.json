  "components": {
    "schemas": {
      "DeliveryPartner": {
        "required": [
          "licenseNumber",
          "password",
          "userAddress",
          "userEmail",
          "userFullName",
          "userName",
          "vehicleNumber"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32"
          },
          "userFullName": {
            "minLength": 1,
            "type": "string"
          },
          "userName": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          },
          "userPhone": {
            "pattern": "^[0-9]{3}-[0-9]{3}$",
            "type": "string",
            "nullable": true
          },
          "userEmail": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "userAddress": {
            "minLength": 1,
            "type": "string"
          },
          "userJoinDate": {
            "type": "string",
            "format": "date"
          },
          "roleId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "userRole": {
            "$ref": "#/components/schemas/UserRole"
          },
          "vehicleNumber": {
            "minLength": 1,
            "type": "string"
          },
          "licenseNumber": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Discount": {
        "required": [
          "description"
        ],
        "type": "object",
        "properties": {
          "discountId": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "percentage": {
            "maximum": 100,
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "isSetToday": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "LoginViewModel": {
        "required": [
          "password",
          "userName"
        ],
        "type": "object",
        "properties": {
          "userName": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      },
      "Menu": {
        "required": [
          "menuCategory",
          "menuName",
          "menuPrice"
        ],
        "type": "object",
        "properties": {
          "menuId": {
            "type": "integer",
            "format": "int32"
